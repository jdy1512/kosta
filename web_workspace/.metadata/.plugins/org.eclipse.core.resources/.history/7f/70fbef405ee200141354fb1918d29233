function getMember(){
	var member = {"id":"id-123",name:"홍길동",address:"경기도 성남시 분당구 삼평동"};
	
	document.getElementById("id").value = member.id;
	document.getElementById("name").value = member.name;
	document.getElementById("address").value = member.address;
}
function getIds(){
	var ids = ["id-1", "id-2", "id-3", "id-4", "id-5"];
	var idSel = document.getElementById("ids");
	
	for (var idx = 0; idx < ids.length; idx++) {
		idSel[idx + 1] = new Option("a", ids[idx]);
	}
}

