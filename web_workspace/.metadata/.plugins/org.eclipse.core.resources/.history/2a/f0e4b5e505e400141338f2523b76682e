	<script type="text/javascript">
		function selectorTest() {
			//$("tr:first").css("background-color", "red");// 첫번째 tr
			//$("tr:last").css("background-color", "gold");// 마지막 tr
			//$("tr:first-child").css("background-color", "pink");// 첫번째 자식노드인 tr
			//$("tr:last-child").css("background-color", "skyblue");// 마지막 자식노드인 tr
			
			$("#memberTb tr:even").css("background-color", "gray");
			// id가 memberTb인 노드의 자손 노드 중에 짝수번째 index의 tr, index - 0부터 시작
			$("#memberTb tr:odd").css("background-color", "orange");// odd - 홀수번째
			$("#memberTb tr:eq(2)").css("color", "blue");// id가 memberTb인 노드의 자손 노드 중에 2번 index
			$("#memberTb tr:lt(2)").css("font-weight", "bold");// 2번 index보다 작은 index의 tr
			$("#memberTb tr:gt(2)").css("text-decoration", "underline");// 2번 index보다 큰 index의 tr
			
			$("#productTb td:nth-child(3)").css("background-color", "hotpink");
			// nth-chile(x) : x-숫자 - x번째 자식 노드인 노드객체(td) - x : 1부터 시작
			$("#productTb td:nth-child(2n)").css("background-color", "cyan");
			// nth-chile(even) : 짝수번째 자식노드, :nth-child(odd) - 홀수번째 자식노드
			// :nth-child(3n+1) : 3의 배수 + 1 번째 자식노드
		}
		
		function getTxt() {
			var txt = document.getElementById("txt").value;
			var txt2 = $("#txt").val();
		}
	</script>
