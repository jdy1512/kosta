	$(document).ready(function() {
		// next() : 바로 다음 형제노드(텍스트 노드 제외)
		// prev() : 바로 전 형제노드(텍스트 노드 제외)
		//$(".third-item").css("background-color", "orange").next().css("background-color", "brown")
		//				.end().prev().css("background-color", "olive");
		
		// nextAll() 다음의 모든 형제노드.
		$(".third-item").nextAll().css("text-decoration", "underline");
	});
</script>

