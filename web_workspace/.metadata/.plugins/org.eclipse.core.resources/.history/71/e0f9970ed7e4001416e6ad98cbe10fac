<script type="text/javascript">
	$(document).ready(function() {
		$("input[type='text']").on("blur", function() {
			$(this).val("입력한 값 : " + this.value);
		});
		$(":text").on("focus", function() {
			$(this).val("");
		});
		
		// select의 선택된 값 조회
		$("#hp").on("change", function() {
			$(this).val();// $(select객체).val() - 선택된 option의 value가 리턴
		});
	});
</script>

