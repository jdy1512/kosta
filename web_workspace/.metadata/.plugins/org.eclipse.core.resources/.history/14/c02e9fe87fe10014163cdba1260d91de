			return;
		}
	}
	// 비동기적 요청처리
	// XMLHttpRequest 객체를 생성-전역변수 xhr에 할당
	if (window.ActiveXObject) {// IE
		xhr = new ActiverXObject("Microsoft.XMLHTTP");
	} else {
		xhr = new XMLHttpRequest();
	}

