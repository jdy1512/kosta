<!-- 
  text/password/textarea 객체 - 한글자 이상 입력되었는지 체크
  radio/checkbox - 선택된 것이 있는지 체크(checkbox-1개이상 선택되면 전송)
  select - 1~12 월 중 하나를 선택했는지 체크
  위 조건을 만족하지 않으면 alert()으로 이유를 알려주고 전송하지 않도록 처리.
 --> 
<script type="text/javascript">
	function formCheck() {
		var id = document.f1.id;// text
		var password = document.f1.password;// password
		var name = document.f1.name;// text
		var gender = document.f1.gender;// radio
		var birthYear = document.f1.birth_year;// select
		var birthDay = document.f1.birth_day;// text
		var lang = document.f1.lang;// checkbox
		var intro = document.f1.intro;// textarea;	
	}
</script>

